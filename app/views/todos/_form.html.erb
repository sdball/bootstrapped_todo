<%= form_for @todo, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Todo</legend>

    <div class="control-group">
      <%= f.label :name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :description, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :description, :class => 'text_area' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :complete, :class => 'control-label' %>
      <div class="controls">
        <%= f.check_box :complete, :class => 'check_box' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :due_at, :class => 'control-label' %>
      <div class="controls">
        <%= f.datetime_select :due_at, :class => 'datetime_select' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', todos_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
