<%= simple_form_for @todo, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Todo</legend>

    <%= f.input :task, input_html: { class: 'span6' } %>
    <%= f.input :description, input_html: { class: 'span6' } %>
    <%= f.input :complete %>
    <%= f.input :due_at,
          input_html: { class: 'span1' },
          start_year: Time.now.year,
          end_year: Time.now.year + 1,
          include_blank: true %>
    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', todos_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
